{
  "name": "ai-content-creator",
  "version": "1.0.0",
  "description": "AI-powered content creation platform",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare-frontend": "cd frontend && npm install --legacy-peer-deps && npm run build",
    "prepare-backend": "cd backend && pip install -r requirements.txt",
    "build": "npm run prepare-frontend",
    "deploy": "firebase deploy",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && uvicorn app.main:app --reload"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mzanuso/ai-content-creator.git"
  },
  "keywords": [
    "ai",
    "content",
    "creator",
    "firebase"
  ],
  "author": "Mzanuso",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mzanuso/ai-content-creator/issues"
  },
  "homepage": "https://github.com/Mzanuso/ai-content-creator#readme",
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "dependencies": {
    "firebase-tools": "^12.5.2"
  }
}