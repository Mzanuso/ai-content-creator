{
  "hosting": {
    "public": "frontend/build",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      ".git/**",
      ".github/**",
      "**/node_modules/**",
      "**/.gitignore",
      "backend/**",
      "docs/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}